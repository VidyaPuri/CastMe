@model Project
@{
    ViewData["Title"] = "Edit Project";
}

<h1>Edit Project</h1>


<form asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ProjectId" />
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="Status"
                    asp-items="Html.GetEnumSelectList<ProjectStatus>()">
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Outfit" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Outfit" class="form-control" />
            <span asp-validation-for="Outfit" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Concept" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Concept" class="form-control" />
            <span asp-validation-for="Concept" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Location" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Lighting" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Lighting" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Composition" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Composition" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Props" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Props" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Equipment" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Equipment" class="form-control" />
        </div>
    </div>

    @*<div class="form-group">
            <label asp-for="Talents" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <select class="form-control" asp-for="Talents"
                        asp-items="">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>*@

    <div class="form-group">
        <label asp-for="Form" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select class="form-control" asp-for="Form"
                    asp-items="Html.GetEnumSelectList<ProjectForm>()">
            </select>
            <span asp-validation-for="Form" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Other" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Other" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Save changes" />
        </div>
    </div>

</form>