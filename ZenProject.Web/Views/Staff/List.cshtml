@model StaffListViewModel
@{
    ViewData["Title"] = "Staff Members";
}
<h1>Staff Members</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Role</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staffMember in Model.StaffMembers)
        {
        <tr>
            <td>@staffMember.FirstName</td>
            <td>@staffMember.LastName</td>
            <td>@staffMember.Role</td>
            <td>@staffMember.Email</td>
            <td>@staffMember.PhoneNumber</td>

            <td>
                <a class="btn btn-lg"
                   asp-controller="Staff"
                   asp-action="Details"
                   asp-route-id="@staffMember.StaffId">
                    <i class="fa fa-search-plus"></i>
                </a>
                <a class="btn btn-lg"
                   asp-controller="Staff"
                   asp-action="Edit"
                   asp-route-id="@staffMember.StaffId">
                    <i class="fa fa-edit"></i>
                </a>
                <a class="btn btn-lg"
                   asp-controller="Staff"
                   asp-action="Delete"
                   asp-route-id="@staffMember.StaffId">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<p class="button">
    <a class="btn btn-primary" asp-controller="Staff" asp-action="Create">Add a Staff Member</a>
</p>