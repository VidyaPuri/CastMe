@model TalentListViewModel
@{
    ViewData["Title"] = "Talent";
}
<h1>Talent Members</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Gender</th>
            <th scope="col">Role</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talentMembers in Model.TalentList)
        {
            <tr>
                <td>@talentMembers.FirstName</td>
                <td>@talentMembers.LastName</td>
                <td>@talentMembers.Gender</td>
                <td>@talentMembers.Role</td>
                <td>@talentMembers.Email</td>
                <td>@talentMembers.PhoneNumber</td>

                <td>
                    <a class="btn btn-lg"
                       asp-controller="Talent"
                       asp-action="Details"
                       asp-route-id="@talentMembers.TalentId">
                        <i class="fa fa-search-plus"></i>
                    </a>
                    <a class="btn btn-lg"
                       asp-controller="Talent"
                       asp-action="Edit"
                       asp-route-id="@talentMembers.TalentId">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-lg"
                       asp-controller="Talent"
                       asp-action="Delete"
                       asp-route-id="@talentMembers.TalentId">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="button">
    <a class="btn btn-primary" asp-controller="Talent" asp-action="Create">Add a Talent Member</a>
</p>