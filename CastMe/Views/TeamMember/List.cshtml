@model TeamMemberListViewModel
@{
    ViewData["Title"] = "Team Members";
}
<h1>Team Members</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Role</th>
            @*<th scope="col">Email</th>
                <th scope="col">Phone number</th>
                <th scope="col">IgHandle</th>
                <th scope="col">FbHandle</th>
                <th scope="col">Equipment</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var teamMember in Model.TeamMembers)
        {
            <tr>
                <td>@teamMember.FirstName</td>
                <td>@teamMember.LastName</td>
                <td>@teamMember.Role</td>
                <td>
                    <a class="btn btn-lg"
                       asp-controller="TeamMember"
                       asp-action="Details"
                       asp-route-id="@teamMember.TeamMemberId">
                        <i class="fa fa-search-plus"></i>
                    </a>
                    <a class="btn btn-lg"
                       asp-controller="TeamMember"
                       asp-action="Edit"
                       asp-route-id="@teamMember.TeamMemberId">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-lg"
                       asp-controller="TeamMember"
                       asp-action="Delete"
                       asp-route-id="@teamMember.TeamMemberId">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="button">
    <a class="btn btn-primary" asp-controller="TeamMember" asp-action="Create">Add a Team Member</a>
</p>